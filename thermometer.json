{
  "openapi": "3.0.1",
  "info": {
    "title": "Siemens S7 PLC API",
    "description": "API for managing and interacting with Siemens S7-1200 1214C PLC via Shifu.",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Siemens S7 PLC API"
    }
  ],
  "paths": {
    "/getcpuordercode": {
      "get": {
        "summary": "getcpuordercode",
        "deprecated": false,
        "description": "getcpuordercode gets the static information of PLC.",
        "tags": [
          "Siemens S7 PLC API"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Success",
                    "value": "6ES7 211-1BE40-0XB0"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sendsinglebit": {
      "get": {
        "summary": "sendsinglebit",
        "deprecated": false,
        "description": "sendsinglebit modifies a single bit.",
        "tags": [
          "Siemens S7 PLC API"
        ],
        "parameters": [
          {
            "name": "rootaddress",
            "in": "query",
            "description": "the name of the memory area. e.g. M for Merker and Q for Digital Output",
            "required": false,
            "example": "Q",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "address",
            "in": "query",
            "description": "the address of the memory area",
            "required": false,
            "example": "0",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "start",
            "in": "query",
            "description": "the start position",
            "required": false,
            "example": "0",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "digit",
            "in": "query",
            "description": "the offset from the start position",
            "required": false,
            "example": "1",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "value",
            "in": "query",
            "description": "the new value to set",
            "required": false,
            "example": "1",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Success",
                    "value": "Changed from bytearray(b'\\x02\\x00') to bytearray(b'\\x02\\x00')"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Failure",
                    "value": "<!doctype html>\n<html lang=en>\n<title>500 Internal Server Error</title>\n<h1>Internal Server Error</h1>\n<p>The server encountered an internal error and was unable to complete your request. Either the server is overloaded or\n    there is an error in the application.</p>"
                  }
                }
              }
            }
          },
          "x-200:Wrong Params": {
            "description": "Wrong Params",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Wrong Params",
                    "value": "UnsupportedMemoryArea"
                  }
                }
              }
            }
          },
          "x-200:Missing Params": {
            "description": "Missing Params",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Missing Params",
                    "value": "UnsupportedMemoryArea"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/getcontent": {
      "get": {
        "summary": "getcontent",
        "deprecated": false,
        "description": "getcontent gets the value of a specific address in a memory area",
        "tags": [
          "Siemens S7 PLC API"
        ],
        "parameters": [
          {
            "name": "rootaddress",
            "in": "query",
            "description": "the name of the memory area. e.g. M for Merker and Q for Digital Output",
            "required": false,
            "example": "Q",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "address",
            "in": "query",
            "description": "the memory area's address",
            "required": false,
            "example": "0",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "start",
            "in": "query",
            "description": "the start position",
            "required": false,
            "example": "0",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Success",
                    "value": "0b0000000000000010"
                  }
                }
              }
            }
          },
          "x-200:Wrong Params": {
            "description": "Wrong Params",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Wrong Params",
                    "value": "UnsupportedMemoryArea"
                  }
                }
              }
            }
          },
          "x-200:Missing Params": {
            "description": "Missing Params",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "1": {
                    "summary": "Missing Params",
                    "value": "UnsupportedMemoryArea"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}